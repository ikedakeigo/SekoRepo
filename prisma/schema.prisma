// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

/// ユーザー
model User {
  id        String   @id @default(uuid())
  email     String   @unique
  name      String
  role      String   @default("staff") // 'staff' | 'admin'
  avatarUrl String?  @map("avatar_url")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // リレーション
  projects Project[] @relation("CreatedProjects")
  reports  Report[]

  @@map("users")
}

/// 案件（施工現場）
model Project {
  id          String    @id @default(uuid())
  name        String
  location    String?
  description String?
  status      String    @default("active") // 'active' | 'completed' | 'posted'
  startDate   DateTime? @map("start_date")
  endDate     DateTime? @map("end_date")
  createdBy   String    @map("created_by")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  // リレーション
  creator User     @relation("CreatedProjects", fields: [createdBy], references: [id])
  reports Report[]

  @@index([status])
  @@index([createdBy])
  @@map("projects")
}

/// レポート（1回の送信）
model Report {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  userId    String   @map("user_id")
  summary   String?  // 全体コメント・概要（その日の作業内容、お客様の様子、スタッフの気持ちなど）
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  // リレーション
  project Project @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user    User    @relation(fields: [userId], references: [id])
  photos  Photo[]

  @@index([projectId])
  @@index([userId])
  @@index([createdAt(sort: Desc)])
  @@map("reports")
}

/// 写真
model Photo {
  id               String    @id @default(uuid())
  reportId         String    @map("report_id")
  photoUrl         String    @map("photo_url")
  photoType        String    @map("photo_type") // 'before' | 'during' | 'after' | 'other'
  title            String
  comment          String?
  customerFeedback String?   @map("customer_feedback")
  sortOrder        Int       @default(0) @map("sort_order")
  takenAt          DateTime? @map("taken_at")
  createdAt        DateTime  @default(now()) @map("created_at")
  updatedAt        DateTime  @updatedAt @map("updated_at")

  // リレーション
  report Report @relation(fields: [reportId], references: [id], onDelete: Cascade)

  @@index([reportId])
  @@index([photoType])
  @@map("photos")
}

/// 案件の日付別投稿済みステータス
model ProjectPostedDate {
  id        String   @id @default(uuid())
  projectId String   @map("project_id")
  date      DateTime @db.Date // 日付のみ（時刻なし）
  isPosted  Boolean  @default(true) @map("is_posted")
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  @@unique([projectId, date])
  @@index([projectId])
  @@map("project_posted_dates")
}
